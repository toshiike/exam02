<%= form_for(@instagram, url: choose_new_or_edit) do |f| %>
  <% if @instagram.errors.any? %>
    <div id="error_explanation">
      <h2><%= @instagram.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @instagram.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :タイトル %>
  <%= f.text_field :title ,class: 'form-control' %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content ,class: 'form-control' %>
  <br>
  <%= image_tag(@instagram.image_url) if image_tag(@instagram.image_url) %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "画像一覧画面にもどる", instagrams_path %>
